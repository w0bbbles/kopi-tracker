<h1> Add new kopi </h1>

<%= form_with scope: :kopis, url: kopis_path, local: true do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <%= form.collection_select :farm_id, @farms, :id, :location %>
  <%= form.collection_select :roast_id, @roasts, :id, :roastedness %>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', kopis_path %>